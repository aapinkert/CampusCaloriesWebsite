extends buylayout

block active
    -var active = 'My Dashboard';
    -var checked = undefined

block title
    | Opt-in for Postseason Tickets

block css
    link(rel="stylesheet" type="text/css" href="static/libs/datatables-1.10.11/css/dataTables.bootstrap.min.css")
    link(rel='stylesheet', href='static/libs/datatables-1.10.11/css/dataTables.fontAwesome.css')

block content
    h2.bold Opt-in for Postseason Tickets:
    hr
    .row
        .col-xs-12
            h3.bold Potential Postseason Games
            table#postseasonTable.table(cellspacing="0" width="100%")
                thead  
                    tr
                        th 
                        th Date
                        th Game
                        th Opt-in
                tbody
                    tr
                        td
                        td 12/31
                        td SEC Championship Game
                        td
                            button.action.btn.btn-default.btn-sm.btn-block(role="button") Add
                    tr
                        td
                        td TBA
                        td Bowl Game 1  
                        td
                            button.action.btn.btn-default.btn-sm.btn-block(role="button") Add
                    tr
                        td 
                        td 1/9/2017
                        td National Championship Game
                        td
                            button.action.btn.btn-default.btn-sm.btn-block(role="button") Add
    br
    .row
        .col-sm-6.col-xs-12
            p.bold Terms and Conditons:
            .well
                p.text-muted
                    | All postseason games are subject to change, based on the results of the football
                    | season. Opting in does not guarentee that you will recieve a ticket for that
                    | game, it only adds you to the request list. Please only add yourself to the 
                    | request list if you intend purchase the ticket in the event Alabama goes to the
                    | games listed above. If Alabama reaches one of the above games, tickets will be
                    | allocated by credit hour. 
    .row
        .col-sm-6
            .checkbox
                label
                    input#checkboxConfirm(type="checkbox") 
                    | I understand the above terms and conditions
    br
    .row
        .col-sm-6
            p.bold Are you sure you want to opt-in for the above postseason game tickets?
            br
    .row 
        .col-sm-3.col-xs-6
            a#confimationBtn.btn.btn-primary.btn-lg.btn-block(href="buytickets-confirm.html" role="button") Confirm
        .col-sm-3.col-xs-6
            a.btn.btn-default.btn-lg.btn-block(href="buytickets-index.html" role="button") Go Back
    br

block js
    script(type="text/javascript" src="static/libs/datatables-1.10.11/js/datatables.min.js")
    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js')
    script(src='static/js/buytickets-postseason.js') 
